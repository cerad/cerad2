<table class="standings" border = "1">
<tr class="tbl-title"><th colspan="16">Team Pool Standings - {{ poolKey }}</th></tr>
<tr class="tbl-hdr">
  <th>Team</th>
  <th align="center">TPE</th>
<!-- <th align="center">WPF</th>-->
 <th>&nbsp;</th>
 <!--<th align="center">GT</th>-->
 <th align="center">GP</th>
 <th align="center">GW</th>
 <th align="center">GS</th>
 <th align="center">GA</th>
 <th align="center">YC</th>
 <th align="center">RC</th>
 <th align="center">TE</th>
 <th align="center">SP</th>
</tr>
{% for report in pool.teams %}
<tr>
    <td>{{ report.team.name  }}</td>
    <td align="center">{%if report.pointsEarned < 0 %} 0 {% else %}{{ report.pointsEarned    }}{% endif %}</td>
<!--    <td align="center">{{ report.winPercent      }}</td>-->
    <td>&nbsp;</td>
    <!--<td align="center">{{ report.gamesTotal      }}</td>-->
    <td align="center">{{ report.gamesPlayed|default(0)      }}</td>
    <td align="center">{{ report.gamesWon|default(0)         }}</td>
    <td align="center">{{ report.goalsScored|default(0)      }}</td>
    <td align="center">{{ report.goalsAllowed|default(0)     }}</td>
    <td align="center">{{ report.playerWarnings |default(0) }}</td>
    <td align="center">{{ report.playerEjections |default(0) }}</td>
    <td align="center">{{ report.totalEjections |default(0) }}</td>
    <td align="center">{{ report.sportsmanship |default(0)  }}</td>
</tr>
{% endfor %}
</table>
