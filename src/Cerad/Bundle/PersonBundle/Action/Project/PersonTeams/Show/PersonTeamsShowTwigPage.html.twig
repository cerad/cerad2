{% extends '@CeradPerson/Layout.html.twig' %}

{% block content %}
<h2>My Teams</h2>
{{ form_start(form) }}
<fieldset>
<table>
<tr><th>Core Teams</th><th>Extra Teams</th></tr>
<tr>
    <td>{{ form_widget(form.CoreTeams)  }}</td>
    <td>{{ form_widget(form.ExtraTeams) }}</td>
</tr>
<tr>
    <td colspan="2">{{ form_widget(form.add) }}</td>
</tr>
</table>
</fieldset>
<div style="display:none">{{ form_rest(form) }}</div>
{{ form_end (form) }}

{% endblock %}{# content #}